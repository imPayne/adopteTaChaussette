{% block body %}

<div class=" flex flex-col items-center justify-center">
    <h1 class="text-3xl mb-10 font-bold">Immatriculation</h1>
    {{ form_start(form, {'attr': {'class': 'w-full max-w-md'}}) }}

    <!-- IDENTITÉ -->
    <div class="mb-4">
    <h1 class="text-2xl mb-10 font-bold">Identité</h1>
        <div class="flex items-center">
            N° de Siret
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.siret, {'attr': {'placeholder': ' Numéro SIRET', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            Nom et Prénom
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div class="flex">
            {{ form_widget(form.name, {'attr': {'placeholder': ' Nom', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
            {{ form_widget(form.firstname, {'attr': {'placeholder': ' Prénom', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300 ml-2'}}) }}
        </div>
    </div>

    <!-- VÉHICULE -->
    <h1 class="text-2xl mb-10 font-bold">Véhicule</h1>
    <div class="mb-4">
        <div class="flex items-center">
            Modèle
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.carModel, {'attr': {'placeholder': ' Modèle Véhicule', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>


    <div class="mb-4">
        <div class="flex items-center">
            Prix
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.carPrice, {'attr': {'id': 'carPriceRange'}}) }}
            <input type="text" id="carPriceValue" readonly>
        </div>
    </div>


    <div class="mb-4">
        <div class="flex items-center">
            Kilométrage
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.kilometer, {'attr': {'placeholder': ' Kilomètres', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            Couleur
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.color, {'attr': {'placeholder': ' Couleur en Hexa', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            Immatriculation
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.registration, {'attr': {'placeholder': ' Immatriculation', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            Date de Facturation
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.bill_date, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>
        <!-- GARAGE / VENDEUR -->
    <h1 class="text-2xl mb-10 font-bold">Garage / Vendeur</h1>
    <div class="mb-4">
        <div class="flex items-center">
            Nom
            <span class="text-red-500 text-xl">*</span>
        </div>
            {{ form_widget(form.garageName, {
        'attr': {
            'placeholder': ' NOM Prénom',
            'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300 font-bodoni text-red-500'
        }
    }) }}
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            Email
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.garageMail, {
        'attr': {
            'placeholder': ' Email',
            'class': 'w-full px-4 py-2 font-bold rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300 font-bodoni text-green-500'
        }
    }) }}
        </div>
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            Ville
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.garageCity, {'attr': {'placeholder': ' Ville', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            Code Postal
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.garageCP, {'attr': {'placeholder': ' Code Postal', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            Adresse
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.garageAdress, {'attr': {'placeholder': ' Adresse', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>

    <div class="mb-4">
        <div class="flex items-center">
            N° Téléphone
            <span class="text-red-500 text-xl">*</span>
        </div>
        <div>
            {{ form_widget(form.garagePhone, {'attr': {'placeholder': ' N° Téléphone', 'class': 'w-full px-4 py-2 rounded-lg border focus:ring focus:ring-blue-300 focus:border-blue-300'}}) }}
        </div>
    </div>

       <div class="flex pt-2 text-center italic pb-10">
				Veuillez vérifier que tous les champs obligatoires ont été complétés. Si tel est le cas,
vous pouvez soumettre votre demande. 
			</div>



    <!-- BOUTON -->
    <div class="flex items-center justify-center">
        <button type="submit" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:shadow-outline-indigo">
            Soumettre
        </button>
    </div>

    {{ form_end(form) }}
</div>
<script>
function updateRangeValue(value) {
    document.getElementById("carPriceValue").value = value;
}


// Script JavaScript pour Hexadécimale
var colorInput = document.getElementById("car_registration_color");

colorInput.addEventListener("input", function() {
    var colorValue = colorInput.value;

    if (colorValue !== null && colorValue.trim() !== '') {
        var hexPattern = /^#[0-9A-Fa-f]{6}$/;

        if (hexPattern.test(colorValue)) {
            console.log("La couleur est en hexadécimal valide : " + colorValue);
            
        } else {
            console.log("La couleur n'est pas en hexadécimal valide : " + colorValue);
        }
    } else {
        console.log("La couleur est null ou vide.");
    }
});


</script>
{% endblock %}
