{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="bg-gray-200 flex justify-center items-center h-screen">
    <div class="bg-white p-8 rounded shadow-md w-96">
        <h1 class="text-2xl font-semibold mb-4">Connexion</h1>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
                </div>
            {% endif %}
            <div class="mb-4">
                <label for="inputEmail" class="block text-gray-600 mb-1">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500" autocomplete="email" required autofocus>
            </div>
            <div class="mb-4">
                <label for="inputPassword" class="block text-gray-600 mb-1">Password</label>
                <input type="password" name="password" id="inputPassword" class="w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <button class="w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600 transition duration-200" type="submit">
                Connexion
            </button>
        </form>
    </div>
</div>
{% endblock %}